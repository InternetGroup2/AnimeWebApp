                <label asp-for="ImageFile" class="control-label" style="color: white;"></label>
                <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" style="background-color: black; color: white;" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: white;">Back to List</a>
