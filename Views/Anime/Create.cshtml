            <div class="form-group">
                <label asp-for="Rating" class="control-label" style="color: white;"></label>
                <input asp-for="Rating" class="form-control" style="background-color: black; color: white;" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label" style="color: white;"></label>
